{
  "appId": "com.multipleshell.app",
  "productName": "MultipleShell",
  "directories": {
    "output": "dist"
  },
  "files": [
    "dist/**/*",
    "src/main/**/*",
    "src/preload/**/*",
    "configs/**/*",
    "build/**/*"
  ],
  "win": {
    "target": "nsis",
    "icon": "build/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
