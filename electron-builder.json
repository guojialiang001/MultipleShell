{
  "appId": "com.multipleshell.app",
  "productName": "MultipleShell",
  "directories": {
    "output": "release/${arch}"
  },
  "files": [
    "dist/**/*",
    "src/main/**/*",
    "src/preload/**/*",
    "configs/**/*",
    "build/**/*"
  ],
  "win": {
    "target": "nsis",
    "icon": "build/icon.ico",
    "artifactName": "${productName} Setup ${version} ${arch}.exe"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "warningsAsErrors": false,
    "include": "build/installer.nsh"
  }
}

